<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/fragment_status"
        android:name="de.sgoral.bawifi.fragments.StatusFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onPreferencesButtonClicked"
        android:text="@string/button_preferences" />

    <Button
        android:text="@string/button_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onLogButtonClicked"
        android:id="@+id/button2"/>
</LinearLayout>