<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/log_filter_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.sgoral.bawifi.fragments.LogFragment">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/log_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stackFromBottom="true"
            android:transcriptMode="normal" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/log_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:src="@drawable/ic_filter_outline"
            app:layout_anchor="@id/log_list"
            app:layout_anchorGravity="top|right|end" />

    </android.support.design.widget.CoordinatorLayout>

    <ListView
        android:id="@+id/log_filter"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>
